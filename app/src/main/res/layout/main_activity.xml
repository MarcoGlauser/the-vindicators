<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="753dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Capture" />

        <GridLayout
            android:id="@+id/produce_container"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:columnCount="2"
            android:elevation="5dp"
            android:rowCount="2"
            android:stretchColumns="0,1"
            android:visibility="gone">

            <TextView
                android:id="@+id/produce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:text="Apple"
                android:textSize="36sp" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/icon_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/fa_calendar_check_solid"
                android:textColor="@color/icon_color"
                android:textSize="30sp"
                app:solid_icon="true" />

            <!--            <com.matrixxun.starry.badgetextview.MaterialBadgeTextView-->
            <!--                android:id="@+id/badge_produce_origin"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_row="0"-->
            <!--                android:layout_column="1"-->
            <!--                android:layout_gravity="right|top"-->
            <!--                android:layout_marginTop="5px"-->
            <!--                android:background="#FB8C00"-->
            <!--                android:text="MaterialBadgeTextView"-->
            <!--                android:textSize="16sp" />-->
        </GridLayout>
    </FrameLayout>
</LinearLayout>